          "label": "Sometimes",
          "effects": [
            { "nutrient_id": "magnesium", "weight": 0.5 },
            { "nutrient_id": "b1_thiamine", "weight": 0.2 },
            { "nutrient_id": "manganese", "weight": 0.2 }
          ]
