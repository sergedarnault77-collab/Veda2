{
  "schema_version": "veda_diet_quickcheck_v1",
  "goal": "Provide low-friction food context so Veda does not imply deficiency when only supplements are logged.",
  "output_states": ["likely_covered_by_food", "maybe_covered", "unknown", "hard_to_cover_from_food"],
  "scoring": {
    "per_nutrient_food_score": "sum of triggered weights",
    "thresholds": {
      "likely_covered_by_food": "score >= 2.0",
      "maybe_covered": "score >= 1.0 and score < 2.0",
      "unknown": "score < 1.0"
    },
    "global_overrides": [
      {
        "nutrient_id": "vitamin_d",
        "rule": "If no fish/fortified dairy/fortified milk alternatives selected, set to hard_to_cover_from_food"
      }
    ]
  },
  "questions": [
    {
      "id": "dairy_or_fortified_alt_milk",
      "label": "Do you regularly consume dairy or fortified milk alternatives?",
      "type": "single_choice",
      "options": [
        {
          "id": "daily",
          "label": "Daily",
          "effects": [
            { "nutrient_id": "calcium", "weight": 1.5 },
            { "nutrient_id": "vitamin_d", "weight": 1.0 },
            { "nutrient_id": "b12", "weight": 0.5 }
          ]
        },
        {
          "id": "few_times_week",
          "label": "A few times per week",
          "effects": [
            { "nutrient_id": "calcium", "weight": 1.0 },
            { "nutrient_id": "vitamin_d", "weight": 0.5 },
            { "nutrient_id": "b12", "weight": 0.3 }
          ]
        },
        { "id": "rarely", "label": "Rarely / never", "effects": [] }
      ]
    },
    {
      "id": "fish_per_week",
      "label": "Do you eat fatty fish (salmon, sardines, mackerel) or fish regularly?",
      "type": "single_choice",
      "options": [
        {
          "id": "twice_plus",
          "label": "2× per week or more",
          "effects": [
            { "nutrient_id": "vitamin_d", "weight": 1.5 },
            { "nutrient_id": "iodine", "weight": 0.5 },
            { "nutrient_id": "selenium", "weight": 0.5 }
          ]
        },
        {
          "id": "once",
          "label": "About 1× per week",
          "effects": [
            { "nutrient_id": "vitamin_d", "weight": 1.0 },
            { "nutrient_id": "iodine", "weight": 0.3 },
            { "nutrient_id": "selenium", "weight": 0.3 }
          ]
        },
        { "id": "rarely", "label": "Rarely / never", "effects": [] }
      ]
    },
    {
      "id": "red_meat_or_shellfish",
      "label": "Do you eat red meat or shellfish regularly?",
      "type": "single_choice",
      "options": [
        {
          "id": "weekly",
          "label": "Weekly",
          "effects": [
            { "nutrient_id": "iron", "weight": 1.5 },
            { "nutrient_id": "zinc", "weight": 1.0 },
            { "nutrient_id": "b12", "weight": 1.0 }
          ]
        },
        {
          "id": "monthly",
          "label": "Monthly / occasionally",
          "effects": [
            { "nutrient_id": "iron", "weight": 0.5 },
            { "nutrient_id": "zinc", "weight": 0.5 },
            { "nutrient_id": "b12", "weight": 0.5 }
          ]
        },
        { "id": "never", "label": "Never", "effects": [] }
      ]
    },
    {
      "id": "eggs_or_dairy_protein",
      "label": "Do you eat eggs and/or dairy protein regularly?",
      "type": "single_choice",
      "options": [
        {
          "id": "most_days",
