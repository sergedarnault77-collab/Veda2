        { "id": "rarely", "label": "Rarely", "effects": [] }
      ]
    },
    {
      "id": "iodized_salt",
      "label": "Do you usually use iodized salt at home?",
      "type": "single_choice",
      "options": [
        {
          "id": "yes",
          "label": "Yes",
          "effects": [{ "nutrient_id": "iodine", "weight": 2.0 }]
        },
        {
          "id": "not_sure",
          "label": "Not sure",
          "effects": [{ "nutrient_id": "iodine", "weight": 0.5 }]
        },
        { "id": "no", "label": "No", "effects": [] }
      ]
    }
  ],
  "nutrient_id_aliases": {
    "riboflavin": "b2_riboflavin"
  },
  "display_rules": {
    "default_dashboard_mode": "supplement_contribution",
    "when_to_show_total_estimate": [
      "User completes diet quick-check (at least 3 questions answered)",
      "OR user opts into 'Estimate total intake' toggle"
    ],
    "language_guardrails": [
      "Use 'likely covered by food' / 'unknown' rather than 'deficient'.",
      "Avoid prescriptive language (no 'you should take').",
      "Emphasize overlap/excess signals over deficiency when food context is unknown."
    ]
  }
}
